# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/foodflow
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=change-this-to-a-very-long-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=foodflow-api
JWT_AUDIENCE=foodflow-app

# SSO Configuration (Authentik compatible)
SSO_ENABLED=false
SSO_PROVIDER=authentik
SSO_BASE_URL=https://authentik.example.com
SSO_REALM=foodflow
SSO_CLIENT_ID=foodflow-app
SSO_CLIENT_SECRET=your-client-secret
SSO_REDIRECT_URI=http://localhost:3001/auth/sso/callback
SSO_JWKS_URI=https://authentik.example.com/application/o/foodflow/jwks/
SSO_USERINFO_ENDPOINT=https://authentik.example.com/application/o/userinfo/
SSO_TOKEN_ENDPOINT=https://authentik.example.com/application/o/token/
SSO_AUTHORIZATION_ENDPOINT=https://authentik.example.com/application/o/authorize/
SSO_INTROSPECTION_ENDPOINT=https://authentik.example.com/application/o/introspect/

# Session Configuration
SESSION_COOKIE_NAME=foodflow_session

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_MENU=3600
CACHE_TTL_USER=1800

# Stripe Configuration (Optional - for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google Maps Configuration (Optional - for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Push Notifications Configuration (Optional)
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_EMAIL=mailto:admin@yourapp.com